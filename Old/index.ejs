<!DOCTYPE html>
<html>

<head>
    <title>Welcome Page</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel='stylesheet' href='./stylesheets/style.css' />
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
    	var onLoad;
		onLoad = <%- locals.onLoad %>
    </script>
</head>

<body>
	<div class = "page-wrapper">
    <div class="container">
        <div class="header col-xs-4">
            <img src="images/doggo.png"/>
            Village
        </div>
<div class="content">
    <br>
    <br>
    <div class="col-xs-offset-6 guest-menu">
        <div class="col-xs-12 box-content text-center">
				<!-- login form -->
				<div id="message"></div>
			<div class="form">
				<form class="loginForm" method = "post" action = "/loginForm">
					<h1>Welcome Back</h1>
			      <input class = "input" type="email" placeholder="email" name = "email" required/>
			      <input class = "input" type="password" placeholder="password" name = "password" required/>
			      <button type = "submit">Sign In</button>
			      <!-- <p class="left col-xs-4 message"><a href="#">Back to Guest</a></p> -->
			    	<p class="login col-xs-offset-6 register"><a href="#">Register as New User</a></p>
			    </form>
			    <!-- registration form -->
			    <form class = "registerForm" action="/registerForm" method="post">
			    <h1>REGISTRATION FORM</h1>
                   <div class="form-group">
						<input class="form-control" type="text" name="first_name" placeholder = "First Name" value="Nik">
						<input class="form-control" type="text" name="last_name" placeholder = "Last Name" value="B">
                        <input type="email" class="form-control" name="email" placeholder="Email Address" name = "email" value="3@3">
                        <input type="password" class="form-control" name="password" placeholder="Password">
                        <input type="text" class="form-control" name="child_name" placeholder="Child's Name" value="5">
						<input type="text" class="form-control" name="relationship" placeholder="Relationship to child (Mom, Dad, etc.)" value="6">
						<input type="text" class="form-control" name="child_username" placeholder="Child's Username" value="7">
						<br>    
						<button id="registration" type = "submit">Sign In</button>   					
                        <p class="backToLogin col-xs-12 text-center"><a href="#"> Back to Login page</a></p>
                    </div>
				</form>
				<!-- second registration form -->
            </div>
		</div>
	</div>
</div>
<div class="col-sm-12 text-center footer">
	2017 Full Stack School Project Team: Aasim, Alex, Clyde, Nikolas, Tai
</div>
			
	</div>
	<script>
		//pull login function
		$('#registration').click(()=>{
				swal({
				  title: "Good job!",
				  text: "Now You Need To LogIn!",
				  icon: "success",
				  button: "Welcome!",
				})
		 //slowing down for 2 seconds to show sweet alert
		});
	

		//pull registration page function
		var pullRegistration = ()=>{
			$('.loginForm').hide('slow');
			$('.guest-menu').animate({height: "570px", top: "-150"}, "slow")
			$('.registerForm').animate({height: "toggle", opacity: "toggle"}, "slow",()=>{
				console.log('produce register form');
			});
		};



		//back to guest page
		var toLoginForm = ()=>{
			$('.registerForm').hide("slow");
			$('.guest-menu').animate({height: "300px", top: "0"}, "slow")
			$('.loginForm').animate({height: "toggle", opacity: "toggle"}, "slow",()=>{
				console.log('login guest form has been served');
			});
		}


		//the following are just the listeners
		// to pull login page
    	$('.backToLogin').click(()=>{
    		$('#message').hide();

    		toLoginForm();
    		console.log("login form will be produced")
    	});
		
		// to pull registration page
		$('.register').click(function(){
			pullRegistration();
			console.log("registration form should've been produced by now");
		});
		
		$(document).ready(()=>{
			if (onLoad == 1) {
				pullRegistration();
				// swal("You Must Register First!", {
    //                   button: "We Appreciate That!",
    //                 });
    		swal({
  				title: "You Must Register First",
  				text: "Or Retry Login again",
  				icon: "error",
  				button: "Thank you!",
			});
			}
		})

		
    </script>
 </div>
</body>
</html>